{
  "manifest_version": 3,
  "name": "Video Audio Translator",
  "version": "0.1.0",
  "description": "Detect videos on the current page and prepare subtitle translation via a local backend.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:8787/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Video Audio Translator"
  }
}

